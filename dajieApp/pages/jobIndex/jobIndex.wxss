/**index.wxss**/
page {
  background-color:#f6f7f8;
}
.wrapper {
  background-color:#f6f7f8;
}
/*搜索框*/
.search-wrap {
  position:fixed;
  left: 0;
  top: 0;
	width: 100%;
	height: 108rpx;
	background-color:#00B6D7;
  color: #fff;
  font-size: 28rpx;
  z-index:1;
  -webkit-transition:background 0.5s ease-in-out;
}
.search-bg {
  position: relative;
  margin:0 30rpx;
  border-radius: 4px;
  background-color:#66D3E7;
  height: 80rpx;
  /*padding: 5rpx 2rpx;*/
}
.search-bg input {
  margin-left: 70rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: rgba(255,255,255,1);
}
.phcolor {
  color: rgba(255,255,255,0.5);
}
.search-bg icon {
  position: absolute;
  top: 26rpx;
  left: 24rpx;
  z-index: 10;
}
/*选择控件*/
.select-wrap {
  background-color: #fafafa;
  height: 80rpx;
  border-bottom: 1px solid #ebebeb;
}
.t-flex-wrap {
  display: flex;
}
.t-flex-item {
  flex: 1;
}
.select-wrap image {
  width: 16rpx;
  height: 16rpx;
}
.select-item {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  border-right: 1px solid #ebebeb;
  line-height: 80rpx;
  height: 100%;
}
/*下拉列表*/
.job-list {
  margin-top: 130rpx;
}
.job-list .navigator {
  /*height: 148rpx;*/
  margin-top: 20rpx;
  background-color: #fff;
  padding:28rpx 30rpx;
  position: relative;
}
/*.job-list .navigator > view {
  position: relative;
}*/
.job-list .logo {
  float: left;
  width:80rpx;
  height:80rpx;
  border: 0.5rpx solid #dbdbdb;
  margin-right: 24rpx;
}
.job-list .logo image {
  width: 68rpx;
  height: 68rpx;
  margin: 7rpx;
}
.job-list .content {
  /*float: left;*/
  margin: 0 200rpx 0 104rpx;
}
.job-list .money {
  width: 200rpx;
  float: right;
  color: #FF6600;
  font-size: 32rpx;
  text-align: right;
}
.job-list .title,
.job-list .company,
.job-list .other {
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.job-list .other {
  color: #999;
}
.job-list .title text {
  color: #353535;
  font-size: 32rpx;
  font-weight: bold;
}
.job-list .company text {
  color: #353535;
  font-size: 26rpx;
}
.job-list .other text {
  color: #999;
  font-size: 26rpx;
  margin-right: 24rpx;
}

.job-list .jp {
  position: absolute;
  top: 0;
  left: 0;
  width: 60rpx;
  height: 60rpx;
}
.job-list .content image {
  margin-left: 8rpx;
}
.job-list .dIcon {
  width: 34rpx;
  height: 30rpx;
}
.job-list .jpIcon {
  width: 48rpx;
  height: 30rpx;
}
.job-list .corpIcon {
  width: 24rpx;
  height: 20rpx;
}
.noneView {
  display: none;
}

