/* pages/jobDetail/jobDetail.wxss */
.p-wrap.fulltime {
  width:100%;
}
.job-wrap .left{
	width: 75%;
	float: left;
	top: 0;
	left: 0;
	margin-bottom: 20rpx;
}
.job-wrap.job-headerInfo .left .company{
	line-height: 50rpx;
	font-size: 28rpx;
	color: #333333;
}
.job-wrap.job-headerInfo .left .dt{
	clear: both;
	overflow: hidden;
}
.job-wrap.job-headerInfo .left .dt .jobName{
	display: inline;
	margin-right: 3rpx;
	font-size: 36rpx;
	font-weight:600;
}
.job-wrap .left .dt{
	font-size: 36rpx;
	line-height: 50rpx;
}
.job-wrap .left .dt .salary{
	color: #FF6600;
	display: inline-block;
}
.job-wrap .right {
    font-size: 24rpx;
    color: #bbb;
    float: right;
    text-align: right;
}
.clearFix{
	clear: both;
	width: 100%;
	float: left;
}
.job-need{
	float: left;
	width: 100%;
	font-size: 28rpx;
	color: #333;
	padding-bottom: 10rpx;
}
.degree,.city,.workexp,.num,.way{
	display: inline-block;
	float: left;
	margin-right: 3%;
}
.job-wrap .job-need .icon {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    position: relative;
    top: 3px;
}
.job-wrap .job-need .icon image{
	width: 100%;
	height: 100%;
}

.job-wrap .job-tags{
	margin-top: 10rpx;
	clear: both;
}
.job-wrap .job-tags view{
	display: inline-block;
	font-size:24rpx;
	border: 0.5rpx solid #00B6D7;
	color: #00B6D7;
	text-align: center;
	padding: 0 2%;
	line-height:34rpx;
	margin: 10rpx 10rpx 0 0;
	border-radius: 2px;
}
.divline {
    width: 100%;
    height: 0;
    border-bottom: 0.5rpx solid #EBEBEB;
    margin: 5% 0;
}
.hrInfo{
	width: 100%;
	display: -webkit-box;
}
.job-wrap .hrHeaderImg{
	position: relative;
	width: 80rpx;
	height: 80rpx;
    margin-right: 3%;
}
.job-wrap .hrHeaderImg view{
	width: 80rpx;
	height: 80rpx;
    border-radius: 20px;
    overflow: hidden;
}
.job-wrap .hrHeaderImg image{
	width: 100%;
	height: 100%;
}
.middle{
	-webkit-box-flex:1;
	font-size: 28rpx;
	color: #333333;
}
.middle view{
	display: inline-block;
}
.hrInfo .name {
	width: 100%;
	padding-bottom: 10rpx;
}
.hrInfo .name .personName{
	margin-right: 3%;
}
.hrInfo .name image{
	width: 180rpx;
	height: 30rpx;
	position: relative;
	top: 3px;
}
.hrInfo .name image.noBussinessUser {
	width: 120rpx;
}
.job-wrap .hrInfo .corp {
	width: 100%;
    color: #666;
    font-size: 28rpx;
    line-height: 35rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.job-wrap .hrInfo .info{
	width: 100%;
    color: #333;
    font-size: 28rpx;
    line-height: 35rpx;
}
.job-wrap .hrInfo .info .info-text{
	display: inline-block;
	margin-right: 3%;
}
.job-wrap .hrInfo .info .info-text .text{
	display: inline-block;
}
.job-wrap .hrInfo .info .info-text .nump{
	color: #00B6D7;
}
.p-wrap .job-wrap {
    height: auto;
    padding: 30rpx;
    background: #fff;
    margin-bottom: 20rpx;
}
.job-wrap .title {
    font-size: 32rpx;
    color: #333333;
    font-weight: normal;
    line-height: 44rpx;
}
.job-detail{
	font-size: 30rpx;
	color: #333333;
	line-height: 50rpx;
	padding-top: 10rpx;
	/*height: 300rpx;*/
	overflow: hidden;
}
.autoHeight{
	height: auto;
}
.openBtn{
	display: inline-block;
	width: 100%;
	text-align: center;
	color: #999999;
	font-size: 28rpx;
	outline: none;
	text-decoration: none;
}
.openBtn view{
	display: inline-block;
}
.openBtn image{
	width: 16rpx;
	height: 10rpx;
	position: relative;
	top: -3px;
}
.corpInfo{
	width: 100%;
	height: auto;
	display: -webkit-box;
	margin:  0;
}
.corpLogo{
	width:80rpx;
	height: 80rpx;
	border-radius: 3px;
	margin-right: 30rpx;
}
.corpLogo image{
	width: 100%;
	height: 100%;
}
.corpInfo .middle{
	-webkit-box-flex:1;
}
.corpInfo .middle .name{
	display: inline-block;
    max-width: 86%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    vertical-align: middle;
    color: #333;
    font-size: 30rpx;
    line-height: 50rpx;
}
.corpInfo .middle .name.vip image{
	width: 22rpx;
	height: 20rpx;
	margin-left: 10rpx;
}
.corpInfo .middle .info{
	width: 100%;
}
.corpInfo .middle .info view{
	font-size: 24rpx;
	color: #666666;
	display: inline;
}
.job-wrap .corpInfo .arrow {
    display: block;
    width: 12px;
    height: 12px;
    border-left: 2px solid #ccc;
    border-top: 2px solid #ccc;
    transform: rotateZ(135deg);
    -webkit-transform: rotateZ(135deg);
    transform-origin: left;
    -webkit-transform-origin: left;
    margin-top: 20rpx;
    display:none;
}
.workcity .title{
	font-size: 28rpx;
	color: #999999;
}
.address{
	font-size:28rpx;
	color: #333333;
	padding-bottom: 108rpx;
}

.p-wrap .footerBtns{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 108rpx;
	background: #fff;
	border-top: 1px solid #EBEBEB;
	left: 0;
	display: -webkit-box;
}
.p-wrap .footerBtns .share{
	-webkit-box-flex:3;
}
.p-wrap .footerBtns .share.index {
	border-right:0.5rpx solid #ebebeb;
}
.p-wrap .footerBtns .send{
	-webkit-box-flex:8;
}
.p-wrap .footerBtns .share {
	margin: 0;
	padding: 0;
	background-color: #fff;
	line-height: 1.5;
}
.p-wrap .footerBtns .share .top{
	width: 100%;
	text-align: center;
	display:-webkit-box;
    -webkit-box-pack:center;
    -webkit-box-align:center;
}
.p-wrap .footerBtns .share .bottom{
	font-size: 26rpx;
	color: #999999;
	text-align: center;
}
.icon_share{
	width: 40rpx;
	height: 40rpx;
	margin-top: 20rpx;
}
.icon_share image{
	width: 100%;
	height: 100%;
	display: block;
}
.p-wrap .footerBtns .send{
	background: #00B6D7;
	color: #fff;
	font-size: 34rpx;
	text-align: center;
	line-height: 108rpx;
}
.p-wrap .footerBtns .hasDeliver {
	color: #fff;
	background-color: #ddd;
}
